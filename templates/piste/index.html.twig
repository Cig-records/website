{% extends 'base.html.twig' %}

{% block title %}Piste index{% endblock %}

{% block body %}
    <h1>Piste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Path</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piste in pistes %}
            <tr>
                <td>{{ piste.id }}</td>
                <td>{{ piste.title }}</td>
                <td>{{ piste.path }}</td>
                <td>
                    <a href="{{ path('piste_show', {'id': piste.id}) }}">show</a>
                    <a href="{{ path('piste_edit', {'id': piste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('piste_new') }}">Create new</a>
{% endblock %}
